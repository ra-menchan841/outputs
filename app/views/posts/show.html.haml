.main
  = render partial: "allPosts", locals: { posts: @posts }
  .main__show
    .main__show__title
      = "内容"
    .main__show__all
      .detail
        .title-btn
          .title
            = markdown(@post.title)
          = link_to edit_post_path(@post.id), class: "btn" do
            = "編集"
        .content
          = markdown(@post.content)