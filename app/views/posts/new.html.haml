.main__memo
  .main__memo__title
    = "めも"
  .main__memo__box
    .input
.main__post
  .main__post__title
    .post-left
      = "投稿"
    .post-right
      .amounts
        = "投稿数：#{@posts}件"
      .posts-all
        = link_to "投稿一覧へ"
  .main__post__box
    = form_for @post do |f|
      .input
        .title-btn
          = f.text_field :title, placeholder: "タイトル", class: "input-title"
          = f.submit "保存", class: "btn"
        = f.text_area :content, placeholder:"本文", class: "input-content"