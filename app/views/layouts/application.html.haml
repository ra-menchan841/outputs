!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Output
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .header
      .header__title
        = link_to "あうとぷっと用", destroy_user_session_path, method: :delete
      .header__signin
        .left
          = link_to "ログイン"
        .right
          = link_to "新規登録"
    .main
      .main__index
        .main__index__title
          = "記事一覧"
        .main__index__all
          - @posts.each do |post|
            .post-title
              = link_to "#{post.title}", post_path(post.id)
      .main__show
        .main__show__title
          = "内容"
        .main__show__all
          = yield 

